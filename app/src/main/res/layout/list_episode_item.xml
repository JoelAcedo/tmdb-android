<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_episode_item"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <TextView
        android:id="@+id/episode_number"
        tools:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/episode_cover"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/episode_name"
        tools:text="Suicide Squad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/episode_number"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/episode_date"
        tools:text="January 17, 2016"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/episode_number"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/episode_cover"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/episode_overview"
        tools:text="From DC Comics comes the Suicide Squad, an antihero team of incarcerated supervillains who act as deniable assets for the United States government, undertaking high-risk black ops missions in exchange for commuted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@+id/episode_cover"
        android:ellipsize="end"
        android:maxLines="5"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@color/colorDivider" />

    <ImageView
        android:id="@+id/episode_cover"
        tools:background="@color/colorAccent"
        android:layout_width="133dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"
        android:scaleType="fitXY"
        android:transitionName="@string/cover_transition_name"
        android:fitsSystemWindows="true"
        android:adjustViewBounds="true"/>

    <ProgressBar
        android:id="@+id/progressBarEpisodeCover"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/episode_cover"
        android:layout_centerVertical="true"
        android:layout_marginEnd="40dp"
        android:visibility="visible" />

</RelativeLayout>