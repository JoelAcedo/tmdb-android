<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/movie_cover_discover"
        android:layout_width="133dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:layout_marginEnd="20dp"/>

    <TextView
        android:id="@+id/movie_name_discover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/movie_cover_discover"
        android:layout_marginTop="15dp"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/movie_category_discover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/movie_name_discover"
        android:layout_toEndOf="@+id/movie_cover_discover"
        android:layout_marginTop="5dp"
        android:textSize="12sp"/>

    <!--<TextView-->
        <!--android:id="@+id/movie_description_discover"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@id/movie_category_discover"-->
        <!--android:layout_toEndOf="@+id/movie_cover_discover"-->
        <!--android:layout_marginTop="20dp"/>-->
    

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="@string/more_info"/>


</RelativeLayout>